.container
  = form_with(model: @board, url:boards_path, method: 'post', local: true) do |f|
    %div 
      = f.label :name, 'タイトル'
    %div 
      = f.text_field :title, class: 'text'
    %div 
      = f.label :description, '内容'
    %div 
      = f.text_area :content, class: 'text_content'
    %div 
      = f.submit '保存', class: 'btn_submit'