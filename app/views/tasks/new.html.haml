.container
  %ul
    - @task.errors.full_messages.each do |message|
      %li= message

  = form_with(model: @task, url: board_tasks_path(@task.board), local: true) do |f|
    %div 
      = f.label :eyecatch, 'アイキャッチ'
    %div
      = f.file_field :eyecatch
    %div
      = f.label :start_day, '開始日時'
    %div 
      = f.date_field :start_day, class: 'text'
    %div
      = f.label :end_day, '期日'
    %div 
      = f.date_field :end_day, class: 'text'
    %div
      = f.label :name, 'タイトル'
    %div 
      = f.text_field :name, class: 'text'
    %div 
      = f.label :description, '内容'
    %div 
      = f.text_field :description, class: 'text_content'
    %div
      = f.submit '保存', class: 'btn_submit'